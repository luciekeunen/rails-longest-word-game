<div id="play">
  <h2>Your letters grid :</h2>
  <h2><%= @grid.join(" - ") %></h2>

  <form action="/score" class="">
    <div class="form-group">
      <input type="text" id="guess" name="attempt" placeholder="Your answer" class="form-control">
      <input type="hidden" name="grid" value="<%= @grid %>">
      <input type="hidden" name="start_time" value="<%= @start_time %>">
      <button type="submit" name="Play!" class="btn btn-primary form-control">Play!</button>
    </div>
  </form>
</div>
